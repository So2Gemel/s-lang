method isEven(int x) => x % 2 == 0;
method isOdd(int x) => x % 2 != 0;
method isPrime(int n) {
  if (n <= 1) return false;
  for (int i = 2; i <= sqrt(n); i++) {
    if (n % i == 0) return false;
  }
  return true;
}

method clamp(int val, int min, int max) {
  if (val < min) return min;
  if (val > max) return max;
  return val;
}

