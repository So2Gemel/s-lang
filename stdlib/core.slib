// 📘 مكتبة قياسية افتراضية للغة S/S++
// جميع الدوال هنا يتم تفسيرها داخل interpreter كمجموعة أدوات أساسية

//------------------------------------------
// 🖨️ المخرجات والإدخال
//------------------------------------------

func print(text: string);                           // طباعة نص أو قيمة
func println(text: string);                         // طباعة مع سطر جديد
func input(prompt: string): string;                 // إدخال من المستخدم

//------------------------------------------
// 🔢 تحويل الأنواع والتحقق منها
//------------------------------------------

func str(x: any): string;                           // تحويل إلى نص
func int(x: any): int;                              // تحويل إلى عدد صحيح
func float(x: any): float;                          // تحويل إلى عدد عشري
func bool(x: any): bool;                            // تحويل إلى قيمة منطقية
func type(x: any): string;                          // نوع القيمة كنص (int، string...)


//------------------------------------------
// 📐 العمليات العامة على النصوص والقوائم
//------------------------------------------

func len(x: string | list<any>): int;               // طول قائمة أو نص
func split(text: string, sep: string): list<string>; // تقسيم النص حسب فاصل
func join(lst: list<string>, sep: string): string;   // دمج النصوص بفاصل

func contains(x: list<any> | string, item: any): bool; // التحقق من وجود عنصر
func reverse(x: string | list<any>): any;           // عكس الترتيب

//------------------------------------------
// 🧮 دوال رياضية وأعداد
//------------------------------------------

func add(a: int, b: int): int;                      // جمع عددين
func sub(a: int, b: int): int;                      // طرح
func mul(a: int, b: int): int;                      // ضرب
func div(a: int, b: int): float;                    // قسمة

func sum(nums: list<float>): float;                 // مجموع عناصر
func max(nums: list<float>): float;                 // القيمة العليا
func min(nums: list<float>): float;                 // القيمة الدنيا

func sqrt(x: float): float;                         // الجذر التربيعي
func pow(x: float, e: float): float;                // رفع لأس
func round(x: float): int;                          // تقريب الرقم

//------------------------------------------
// 🧩 القوائم والتعديل عليها
//------------------------------------------

func push(lst: list<any>, item: any): list<any>;     // إضافة عنصر
func pop(lst: list<any>): any;                       // إزالة العنصر الأخير
func remove(lst: list<any>, index: int): list<any>;  // إزالة عنصر حسب فهرس
func sort(lst: list<int>): list<int>;                // ترتيب تصاعدي

//------------------------------------------
// 🎰 أدوات النظام والتأخير العشوائي
//------------------------------------------

func rand(): int;                                   // عدد عشوائي بين 0 و100
func sleep(seconds: int);                           // تأخير التنفيذ

//------------------------------------------
// 📝 رسائل النظام والتنسيق
//------------------------------------------

func log(text: string);                             // طباعة رسالة تنسيق داخلي
func error(msg: string);                            // طباعة خطأ وإيقاف التنفيذ

