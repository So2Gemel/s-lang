// 📘 مكتبة قياسية للغة S/S++
// يتم تفسير جميع هذه الدوال مباشرة داخل المفسّر

//-------------------------------
// 🖨️ الإخراج والإدخال
//-------------------------------
func print(text: string);                    // طباعة نص
func println(text: string);                  // طباعة مع سطر جديد
func input(prompt: string): string;          // إدخال من المستخدم

//-------------------------------
// 🔁 التحويل والتحقق
//-------------------------------
func str(x: any): string;                    // تحويل إلى نص
func int(x: any): int;                       // تحويل إلى عدد صحيح
func float(x: any): float;                   // تحويل إلى عدد عشري
func bool(x: any): bool;                     // تحويل إلى قيمة منطقية
func type(x: any): string;                   // الحصول على نوع القيمة

//-------------------------------
// 📐 التعامل مع النصوص والقوائم
//-------------------------------
func len(x: string | list<any>): int;        // طول قائمة أو نص
func split(text: string, sep: string): list<string>; // تقسيم نص حسب فاصل
func join(lst: list<string>, sep: string): string;   // دمج قائمة نصوص بفاصل
func reverse(x: string | list<any>): any;    // عكس ترتيب نص أو قائمة
func contains(x: string | list<any>, item: any): bool; // التحقق من وجود عنصر
func replace(text: string, old: string, new: string): string; // استبدال في نص

//-------------------------------
// 🧮 دوال رياضية
//-------------------------------
func add(a: int, b: int): int;
func sub(a: int, b: int): int;
func mul(a: int, b: int): int;
func div(a: int, b: int): float;

func sum(lst: list<float>): float;
func max(lst: list<float>): float;
func min(lst: list<float>): float;
func avg(lst: list<float>): float;

func sqrt(x: float): float;
func pow(x: float, e: float): float;
func round(x: float): int;
func abs(x: float): float;

//-------------------------------
// 🧩 تعديل على القوائم
//-------------------------------
func push(lst: list<any>, item: any): list<any>;
func pop(lst: list<any>): any;
func remove(lst: list<any>, index: int): list<any>;
func insert(lst: list<any>, index: int, item: any): list<any>;
func sort(lst: list<int>): list<int>;

//-------------------------------
// 🎰 نظام وتأخير عشوائي
//-------------------------------
func rand(): int;                            // عدد عشوائي من 0 إلى 100
func sleep(seconds: int);                    // تأخير التنفيذ بالثواني

//-------------------------------
// 📋 رسائل النظام
//-------------------------------
func log(text: string);                      // طباعة رسالة نظامية
func error(msg: string);                     // طباعة خطأ وإيقاف التنفيذ

//-------------------------------
// 🔄 دوال مستقبلية (غير مفعّلة بعد)
//-------------------------------
func map();
func filter();
func reduce();
func format();
func range();
