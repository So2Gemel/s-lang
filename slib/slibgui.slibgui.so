method animateBounce(int x, int y) {
  int dy = 0;
  while (true) {
    Graphics.clear("white");
    Graphics.circle(x, y + dy, 25, "red");
    Graphics.refresh();
    dy += 2;
    if (dy > 100) dy = 0;
    sleep(30);
  }
}

