class Counter {
    let value: int;

    func init() {
        self.value = 0;
    }

    func increment() {
        self.value = self.value + 1;
    }

    func reset() {
        self.value = 0;
    }

    func show() {
        print("القيمة الحالية: " + str(self.value));
    }
}

func main() {
    let c: Counter = Counter();
    c.increment();
    c.increment();
    c.show();      // 2
    c.reset();
    c.show();      // 0
}
